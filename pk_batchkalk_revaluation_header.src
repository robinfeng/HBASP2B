for=loop=1=<dw_2.rowcount>
setrow=<loop>

select convert(int,U_M_WarehouseCost) from OWHS &
where whscode=N'<dw_2.item.whscode:[loop].value>'

if <wert1> n= 1 then
dw_2.item.ok:[loop].value=0
dw_2.item.newprice:[loop].value=0
end if
next
end event

